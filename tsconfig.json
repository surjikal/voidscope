{
    "compilerOptions": {
        "experimentalDecorators": true,
        // Strictness stuff...
        "downlevelIteration": true,
        "allowJs": true,
        "checkJs": false,
        "target": "es2017",
        "lib": [ "ES2020", "DOM" ],
        // These help with the JS/CS/TS compatibility
        "moduleResolution": "node",
        // Source maps for nice stack traces / debugging
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "alwaysStrict": true,
        "module": "esnext"
    },
    "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        ".git",
        "node_modules",
        "dist",
      ]
}
